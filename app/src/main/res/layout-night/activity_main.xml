<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calc_background_1_vertical">

    <LinearLayout
        android:id="@+id/output_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_margin_button"
            android:background="@color/field_1_color_night"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/entering_num_size" />

        <TextView
            android:id="@+id/operation_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_margin_button"
            android:background="@color/field_2_color_night"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/operator_size" />

        <EditText
            android:id="@+id/entry_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_margin_button"
            android:background="@color/field_3_color_night"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/entering_num_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@id/input_field_1"
        app:layout_constraintStart_toStartOf="@+id/input_field_1"
        app:layout_constraintTop_toBottomOf="@id/output_field"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/clear"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/backspace"
            app:cornerRadius="@dimen/button_corner_radius" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_field_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin_layout"
        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@id/input_field_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actions_field"
        app:layout_constraintVertical_chainStyle="packed">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/seven"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/eight"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/nine"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/operation_button_color_night"
            android:onClick="clickOperation"
            android:text="@string/division"
            app:cornerRadius="@dimen/button_corner_radius" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_field_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin_layout"
        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@id/input_field_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_field_1">

        <Button
            android:id="@+id/button_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/four"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/five"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/six"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/operation_button_color_night"
            android:onClick="clickOperation"
            android:text="@string/multiply"
            app:cornerRadius="@dimen/button_corner_radius" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_field_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin_layout"
        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@id/input_field_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_field_2">

        <Button
            android:id="@+id/button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/one"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/two"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/three"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/operation_button_color_night"
            android:onClick="clickOperation"
            android:text="@string/plus"
            app:cornerRadius="@dimen/button_corner_radius" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_field_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin_layout"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_field_3">

        <Button
            android:id="@+id/button_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/zero"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/num_button_color_night"
            android:onClick="clickNumber"
            android:text="@string/dot"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/operation_button_color_night"
            android:onClick="clickEquals"
            android:text="@string/equals"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin_button"
            android:layout_weight="1"
            android:backgroundTint="@color/operation_button_color_night"
            android:onClick="clickOperation"
            android:text="@string/minus"
            app:cornerRadius="@dimen/button_corner_radius" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>